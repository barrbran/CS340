<!-- Search Bar -->
<!DOCTYPE html>
<html>
    <head>
    <link rel="stylesheet" href="static/css/main.css">
        
        <style>

form.example input[type=text] {
  padding: 10px;
  font-size: 14px;
  border: 1px solid grey;
  float: left;
  width: 80%;
  background: #f1f1f1;
}
button {
  float: left;
  width: 15%;
  padding: 10px;
  background: #8e969c;
  color: white;
  font-size: 14px;
  border: 1px solid grey;
  border-left: none;
  cursor: pointer;
}
button:hover {
  background: #69747e;
}
form.example::after {
  content: "";
  clear: both;
  display: table;
}

</style>
    </head>
    <body>

    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/search">Search</a>
        <a href="/browse_patient">Patients</a>
        <a href="/browse_doctor">Doctors</a>
        <a href="/browse_nurse">Nurses</a>
        <a href="/browse_office">Offices</a>
        <a href="/browse_manager">Managers</a>
	    <a href="/browse_assignment">Assignments</a>
    </div>

        <h1><center>Doctor Search</center></h1>
        <form class="example" method="post" action="/search"
        style="margin:auto;max-width:700px">
            <input type="text" placeholder="Search by first or last name" name="doctor">
            <button>submit
            </button type="submit">

        </form>
        <p></p>
        <center>
        <table border>
        <thead>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Salary</th>
            <th>Nurse ID</th>
            
        </thead>
            
        {% for doctor in search %}
            <tr>
                <td> {{doctor['id']}}
                <td> {{doctor['fname']}}
                <td> {{doctor['lname']}}
                <td> {{doctor['phoneNumber']}}
                <td> {{doctor['salary']}}
                <td> {{doctor['nurseID']}}
                </br>
            </tr>
        {% endfor %}
        </table>
        </center>
    
    </body>
</html>
